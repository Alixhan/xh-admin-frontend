{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "src/**/*",
    "interface/**/*",
    "types/**/*.d.ts"
  ],
  "exclude": [
    "src/**/__tests__/*",
    "node_modules/**/*.d.ts"
  ],
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "outDir": "dist",
    "declaration": false,
    "noImplicitAny": false,
    "allowJs": true,
    "strict": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "composite": true,
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@i/*": ["interface/*"],
      "@d/*": ["docs/*"],
    },
    "types": [
      "vite/client"
    ],
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "removeComments": false,
    "sourceMap": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noEmit": false
  }
}
