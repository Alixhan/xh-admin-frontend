{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": ["src/**/*", "src/**/*.vue"],
  "exclude": ["src/**/__tests__/*", "node_modules/**/*.d.ts"],
  "compilerOptions": {
    "noImplicitAny": false,
    "allowJs": true,
    "strict": true,
    "isolatedModules": true,
    "composite": true,
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
