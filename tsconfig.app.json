{
  "extends": "@vue/tsconfig/tsconfig.dom.json",
  "include": [
    "src/**/*",
    "src/**/*.vue",
    "env.d.ts"
  ],
  "exclude": [
    "src/**/__tests__/*",
    "node_modules/**/*.d.ts"
  ],
  "compilerOptions": {
    "noImplicitAny": false,
    "allowJs": true,
    "strict": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "composite": true,
    "moduleResolution": "Node",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "types": [
      "vite/client",
    ],

    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "removeComments": false,
    "sourceMap": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
  }
}
